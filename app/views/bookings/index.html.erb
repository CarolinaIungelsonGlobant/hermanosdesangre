<div class="columna col_izq">
  <div class="listado_meses">
    <h2>Seleccione mes y a√±o:<h3>
    <ul id="lista_meses">
      <% Range.new(Time.now.to_i, 5.months.from_now.to_i).step(1.month) do |month| %>
       <li><%= link_to "#{Time.at(month).month}/#{Time.at(month).year.to_s[-2,2]}", ong_bookings_path(year: Time.at(month).year, month: Time.at(month).month) %></li>
      <% end %>
    </ul>
  <div style="clear:both"></div>
  <h2>Seleccione dia:<h3>
  <%= render partial: 'calendar', locals: { year: @year, month: @month } %>
  </div>
</div>
<div id="bookings" class="columna col_der">
  <% if params[:date] %>
    <%= render partial: 'turnos_dia', locals: { turnos: @bookings } %>
  <% else %>
    <h3>Seleccione el dia del calendario para ver los turnos disponibles<h3>
  <% end %>
</div>
