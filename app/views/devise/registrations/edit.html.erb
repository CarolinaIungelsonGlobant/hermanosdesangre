<div class="col-lg-6">
    <div class="col-lg-12">
      <a class="boton_donar" style="margin-top: 80px;" href="quiero_donar.html" title="Quiero donar">
          <%= image_tag "quierodonar_btn.png" %>
      </a>
    </div>
    <div class="col-lg-12">
      <iframe
      src="http://s.cssdeck.com/labs/full/badgethermanossangre//noframe#dontkillanim" sandbox="allow-scripts allow-same-origin"></iframe>
    </div>
</div>

<div class="col-lg-6">
  <h3>REGISTRARSE</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :first_name, placeholder: "NOMBRE", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :birth, placeholder: "NACIMIENTO: dd/mm/aaaa", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :dni, placeholder:  "DNI", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :bloodtype, placeholder:  "GRUPO SANGUINEO", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :gender, placeholder:  "SEXO", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :city, placeholder:  "CIUDAD", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "E-MAIL", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "PASSWORD", class: "form-control" %>
      </div>
      <p>Si quieres cambiar tu password completa tambien estos datos</p>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "REPITE PASSWORD", class: "form-control" %>
      </div>
      <%= f.submit "ACTUALIZAR INFORMACION", class: "btn btn-lg btn-default" %>
    <% end %>
</div>
