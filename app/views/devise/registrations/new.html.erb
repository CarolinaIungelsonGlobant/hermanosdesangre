<div class="columna col_der">
  <div class="col_div registrarse">
    <h1><strong>REGISTRARSE</strong></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :first_name, placeholder: "NOMBRE" %>
    <%= f.text_field :birth, placeholder: "NACIMIENTO: dd/mm/aaaa" %>
    <%= f.text_field :dni, placeholder: "DNI" %>
    <!--<%= f.text_field :bloodtype, placeholder: "GRUPO SANGUINEO" %>-->
    <select id="user_bloodtype" name="user[bloodtype]" placeholder="GRUPO SANGUINEO" type="text">
        <option value="Apositivo">A+</option>
        <option value="Anegativo">A-</option>
        <option value="Bpositivo">B+</option>
        <option value="Bnegativo">B-</option>
        <option value="ABpositivo">AB+</option>
        <option value="ABnegativo">AB-</option>
        <option value="0positivo">0+</option>
        <option value="0negativo">0-</option>
    </select>
    <!--<%= f.text_field :gender, placeholder: "SEXO" %>-->
    <%= radio_button_tag(:gender, "Hombre") %>
      <%= label_tag(:gender, "Hombre") %>
    <%= radio_button_tag(:gender, "Mujer") %>
      <%= label_tag(:gender, "Mujer") %>
    <!--*-->
    <%= f.text_field :city, placeholder: "CIUDAD" %>
    <%= f.email_field :email, autofocus: true, placeholder: "E-MAIL" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "REPITE PASSWORD" %>
    <%= f.submit "Sign up" %>
    <% end %>
  </div>
</div>
<div class="col_izq">
  <%= render partial: 'shared/gota_donar' %>
</div>