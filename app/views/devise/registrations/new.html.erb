<div class="col-lg-6">
    <a class="boton_donar" style="margin-top: 80px;" href="quiero_donar.html" title="Quiero donar">
        <%= image_tag "quierodonar_btn.png" %>
    </a>
</div>

<div class="col-lg-6">
  <div class="titulo_ingresar" style="margin-top: 25px;">REGISTRARSE</div>
  <div class="inputs_container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.text_field :first_name, placeholder: "NOMBRE" %>
        <%= f.text_field :birth, placeholder: "NACIMIENTO: dd/mm/aaaa" %>
        <%= f.text_field :dni, placeholder:  "DNI" %>
        <%= f.text_field :bloodtype, placeholder:  "GRUPO SANGUINEO" %>
        <%= f.text_field :gender, placeholder:  "SEXO" %>
        <%= f.text_field :city, placeholder:  "CIUDAD" %>
        <%= f.email_field :email, autofocus: true, placeholder: "E-MAIL" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "REPITE PASSWORD" %>
        <%= f.submit "Sign up" %>
      <% end %>
  </div>
</div>
