<div class="col_none">
    <div class="col_div">
        <h2>¿Olvidaste tu contraseña?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.label :email %> <%= f.email_field :email, autofocus: true %> <br />
        <%= f.submit "Recuperar" %>
        <% end %>
    </div>
</div>