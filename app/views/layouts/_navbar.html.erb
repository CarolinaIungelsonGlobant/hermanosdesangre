<div class="faldon_top_container">
  <div class="faldon_top">
    <div class="logo_top_container">
      <%= link_to image_tag("logo.gif"), root_path, alt: 'Hermanos de Sangre' %>
    </div>
    <div class="menus">
      <ul id="menu">
        <li>
          <%= link_to "DONANTES", donors_path %>
          <ul class="sub-menu">
            <li><%= link_to "Impacto", impact_path %></li>
            <li><%= link_to "Requisitos", requirements_path %></li>
            <li><%= link_to "Consejos", advises_path %></li>
            <li><%= link_to "Más Info", more_info_path %></li>
          </ul>
        </li>
        <li><%= link_to "¿QUIÉNES SOMOS?", about_us_path %>
        <ul class="sub-menu">
          <li>
            <%= link_to "Nosotros", about_us_path %>
          </li>
          <li>
            <%= link_to "Campaña", campaign_path %>
          </li>
        </ul>
      </li>
    </ul>
    <ul id="sobre_derecha">
      <li><span class='HS_email'><%= link_to "contacto", contact_path %></span><span class='st_facebook'></span><span class='st_twitter'></span></li>
      <% if current_user %>
        <li><%= link_to "SALIR", destroy_user_session_path, :method => :delete %></li>
        <li><%= link_to "#{current_user.first_name}",user_path(current_user) %></li>
        <% else %>
        <li><%= link_to "REGÍSTRATE", new_user_registration_path %></li>
        <li><%= link_to "INGRESA", user_session_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="abrir-menu"><div></div></div>
    <script type="text/javascript">
    $(".abrir-menu").click(function(){
    $(".abrir-menu, .abrir-menu div, .menus").toggleClass("mAbierto");
    });
    </script>
  </div>
</div>