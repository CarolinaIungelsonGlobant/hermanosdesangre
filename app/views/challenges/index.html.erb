<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Ong</th>
      <th>Objective</th>
      <th>Progress</th>
      <th>Active</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.ong %></td>
        <td><%= challenge.objective %></td>
        <td><%= challenge.progress %></td>
        <td><%= challenge.active %></td>
        <td><%= challenge.start %></td>
        <td><%= challenge.end %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_ong_challenge_path %>
